layout: "base.njk"
---
<h2>Recent Posts</h2>
<ul>
  {%- for post in collections.post | reverse -%}
    <li>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
      <br>
      <time datetime="{{ post.date.toISOString() }}">
        {{ post.date.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'}) }}
      </time>
    </li>
  {%- endfor -%}
</ul>